<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:text="Line 1"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/tickets_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/title" />


    />

    <ImageButton
        android:id="@+id/iconci"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/venues_selected_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/subTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK GUESTS MY RESOS  CHECK IN "
        android:layout_below="@+id/iconbg"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/iconmr"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/venues_selected_icon"
        android:layout_toLeftOf="@+id/iconci"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:id="@+id/iconbg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/venues_selected_icon"
        android:layout_toLeftOf="@+id/iconmr"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />


</RelativeLayout>